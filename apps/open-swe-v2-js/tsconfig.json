{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false
  },
  "include": ["*.ts", "*.js"],
  "exclude": [
    "node_modules",
    "dist",
    "**/node_modules/**",
    "../../node_modules"
  ]
}
